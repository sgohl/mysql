[mysqld]
user = mysql
port = 3306

datadir = /var/lib/mysql/data
socket = /var/lib/mysql/mysql.sock
pid-file = /var/lib/mysql/mysqld.pid
tmpdir = /tmp

skip-external-locking
skip_name_resolve
character-set-server   = utf8
default-storage-engine = innodb

general_log = OFF
long_query_time = 2
slow_query_log = ON
slow_query_log_file = /var/lib/mysql/mysql-slow.log

## replication
server-id = 1
log-bin                 = /var/lib/mysql/binlog/mysql-bin.log
binlog-format           = row
max_binlog_size         = 50M
expire-logs-days        = 7
relay-log = /var/lib/mysql/relaylog/relay-bin.log
relay_log_info_file= /var/lib/mysql/relaylog/relay-log.info
max_relay_log_size= 20M
master-info-file = /var/lib/mysql/data/master.info


# TUNING
key_buffer_size          = 256M   #MyISAM
max_allowed_packet       = 32M
thread_stack             = 192K
table_open_cache         = 3072
sort_buffer_size         = 4M
read_buffer_size         = 4M
myisam_sort_buffer_size  = 64M
thread_cache_size        = 64
max_connections          = 4000
back_log                 = 1000
tmp_table_size           = 256M
max_heap_table_size      = 256M
query_cache_type         = 1
query_cache_limit        = 8388608
query_cache_min_res_unit = 1024
query_cache_size         = 64M

innodb_file_per_table
innodb_file_format       = barracuda
innodb_buffer_pool_size  = 1024M
innodb_read_io_threads   = 16
innodb_write_io_threads  = 16
innodb_lock_wait_timeout = 120
innodb_log_file_size     = 128M
innodb_io_capacity       = 200

event_scheduler = ON
